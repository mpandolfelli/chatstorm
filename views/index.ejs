    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>    
		
	  <script src="js/socket.io.js"></script>

    <script type="text/javascript">


    //var socket = io('http://localhost:3000');
    var socket = io('http://www.turkin.com.ar:3000/');
    var yo = '<%= user.username %>';

    var usersWritting = [];

    Notification.requestPermission();

    $(document).ready(function(){

      $('.join-room').click(function(){
        $('.hide-loading').fadeOut();
        $('.uil-circle').fadeIn();
        socket.emit('join_room', {user:  yo});
      });

       /* El chat */

      $('#comment').keypress(function(e) {
        socket.emit('is_writting', { username: yo });
         if(e.which == 13) {
          e.preventDefault();
            document.getElementById('comment').textContent;
             var comment = document.getElementById('comment').textContent;
             if(comment != ''){
               $('#comment').html('');
               $('#comment').focus();
               socket.emit('comment', { comment: comment, username: yo });
             }

         }
      });

      $('#gif-text').keypress(function(e) {
       
         if(e.which == 13) {
          e.preventDefault();
             var gif = $('#gif-text').val();
             if(gif != ''){
               searchGif(gif);
             }
         }
      });


      socket.on('is_writting', function(data){
        if(usersWritting.indexOf(data.username) == -1){
          usersWritting.push(data.username);
          $('.writting').append('<div class="is_writting" id="'+data.username+'">'+data.username+' esta escribiendo...</div>');
        }else{
          setTimeout(function(){
            $('#'+data.username).remove();
            usersWritting.splice(data.username, 1);
          }, 4000);
          
        }

        
       
        
      });

      $('.chat-messages').height($(window).height() - 90 - 92 - 45);

      $('#username').html(yo);
      
      $('#send-comment').click(function(){
        var comment = document.getElementById('comment').textContent;
        if(comment != ''){
          $('#comment').html('');
          $('#comment').focus();
          socket.emit('comment', { comment: comment, username: yo });
        }
        
      });
    });
    
    socket.on('gif', function(data){
      
      $('.chats').append('<div class="chat yo" style="color:<%= user.color %>"><span class="username">'+data.username+'</span>: <img src="'+data.gif+'" width="350"></div>');
      scrollTo = $('.chat').last();
        container.scrollTop(
           scrollTo.offset().top - container.offset().top + container.scrollTop()
        );
    });

    socket.on('room_joined', function(data){
      $('.uil-circle').fadeOut();
      $('.welcome').hide();
      $('.chatstorm').removeClass('hide');

    });

    socket.on('banana', function(data){
      $('.'+data).fadeIn();
      setTimeout(function(){
         $('.'+data).fadeOut();
      }, 4000);
    });

    socket.on('users_to_me', function (data) {

      $('#users').html('');
      if(data.users.length > 0){
        for(var i = 0; i <= data.users.length - 1 ; i++ ){
          $('#users').append('<div>'+data.users[i].username+'</div>');
          

        }
    }
    });


    $('#serach-gif').click(function(){
      var text = $('#gif-text').val();
      searchGif(text);
    });
    
    function searchGif(text){
      $('.result').html('');
      $.get( "http://api.giphy.com/v1/gifs/search?q="+text+"&api_key=dc6zaTOxFJmzC&limit=10", function( data ) {

         $.each(data.data, function(i, item) {
            $('.result').append('<div class="gif-container"><a href="javascript:void(0);" class="send-gif" data-gif="'+item.images.downsized_medium.url+'"><img src="'+item.images.downsized_medium.url+'" width="120" height="100"/></a></div>');
            
        });
      });
    }


    $('.result').on('click', '.send-gif', function(){

        var gif = $(this).data('gif');
        socket.emit('gif', {gif: gif, username: yo });
    });
    

    var container = $('.chats');
    
    
    socket.on('comment_to_me', function (data) {
     

      $('.chats').append('<div class="chat yo" style="color:<%= user.color %>"><span class="username">'+data.username+'</span>: <span class="message">'+data.comment+'</span></div>');
      scrollTo = $('.chat').last();
        container.scrollTop(
           scrollTo.offset().top - container.offset().top + container.scrollTop()
        );
    });

    socket.on('comment_to', function (data) {
      var title = "chatStorm";
      var extra = {
        icon: "images/menem.jpg",
        body: 'Tenes un mensaje bebote.'
      }
      // Lanzamos la notificación
      var notification = new Notification( title, extra);      
      setTimeout(function(){
            notification.close(); //closes the notification
        },1000); 

      $('.chats').append('<div class="chat" style="color:'+data.color+'"><span class="username">'+data.username+'</span>: <span class="message">'+data.comment+'</span></div>');
      scrollTo = $('.chat').last();
        container.scrollTop(
           scrollTo.offset().top - container.offset().top + container.scrollTop()
        );
    });


  </script>
		
		
	<% } %>


   


